@model trabajopalacasa.Models.ViewModels.EditarSolicitud
@{
    ViewBag.Title = "EditarSoli";
}
<div class="container">
    <br />
    <h2>@ViewBag.Title</h2>

    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("EditarSoli", "Home", FormMethod.Post, new { role = "form", @class = "" }))
            {
                @Html.HiddenFor(d => d.Id)
                @Html.AntiForgeryToken()

                @Html.ValidationMessage("error", new { @class = "text-danger" })

                @Html.LabelFor(d => d.Titulo)
                @Html.TextBoxFor(d => d.Titulo, new { @class = "form-control" })
                @Html.ValidationMessage("Titulo", new { @class = "text-danger" })<br />

                @Html.LabelFor(d => d.Tipo_solicitud)
                @Html.TextBoxFor(d => d.Tipo_solicitud, new { @class = "form-control" })
                @Html.ValidationMessage("Tipo_solicitud", new { @class = "text-danger" })<br />


                @Html.LabelFor(d => d.Mensaje)
                @Html.TextAreaFor(d => d.Mensaje, new { @class = "form-control" })
                @Html.ValidationMessage("Mensaje", new { @class = "text-danger" })<br />


                <div style="text-align:right;">

                    <input type="submit" class="btn btn-success" value="Actualizar Solicitud" />

                </div>

            }
        </div>
    </div>
</div>